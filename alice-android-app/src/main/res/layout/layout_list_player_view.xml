<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.frewen.demo.library.mvvm.widgets.CircleImageView
        android:id="@+id/blur_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="blur_image" />


    <!--真正能够播放展示视频画面的view会动态的添加到这里-->


    <com.frewen.demo.library.mvvm.widgets.CircleImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="cover" />


    <!-- 屏幕中间的播放按钮 -->
    <!-- transitionName：共享元素名称-->
    <ImageView
        android:id="@+id/playBtn"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:src="@mipmap/ic_video_play"
        android:transitionName="play_btn" />


    <!-- 视频播放时的底部进度条-->

    <!--中间的加载动画-->
    <ProgressBar
        android:id="@+id/bufferView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimaryLight"
        android:transitionName="buffer_view"
        android:visibility="gone" />
</merge>