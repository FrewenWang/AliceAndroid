<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logic.ui.SplashActivity">

    <ImageView
        android:id="@+id/ivSplashPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_splash" />

    <ImageView
        android:id="@+id/ivSlogan"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:padding="8dp"
        android:src="@drawable/icon_splash_title" />

    <com.frewen.aura.ui.textview.TypefaceTextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvDescription"
        android:layout_centerHorizontal="true"
        android:text="@string/splash_description_title"
        android:textColor="#ccffffff"
        android:textSize="15sp"
        app:typeface="lobsterTypeface" />

    <com.frewen.aura.ui.textview.TypefaceTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="49dp"
        android:text="@string/splash_description_content"
        android:textColor="@color/color_white_alpha20"
        android:textSize="13sp"
        app:typeface="fzlLTypeface" />

</RelativeLayout>
