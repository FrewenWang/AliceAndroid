<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logic.samples.animation.ui.main.PlaceholderViewFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_vertical_margin_16"
        android:layout_marginTop="@dimen/dp_vertical_margin_16"
        android:layout_marginEnd="@dimen/dp_vertical_margin_16"
        android:layout_marginBottom="@dimen/dp_vertical_margin_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />


    <com.frewen.android.demo.logic.samples.animation.v1.FrameAnimDrawable
        android:id="@+id/frameAnimView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_label" />

</androidx.constraintlayout.widget.ConstraintLayout>