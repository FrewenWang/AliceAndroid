<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.frewen.android.demo.permissions.PermissionsFragment"
        android:label="Permissions">
        <!--action:声明的参数如下：-->
        <!--action:destination：Fragment的目的地-->
        <!--action:popUpTo：将当前Fragment移出Action栈-->
        <action
            android:id="@+id/action_permissions_to_camera2_list"
            app:destination="@id/camera2_list_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/camera2_list_fragment"
        android:name="com.frewen.android.demo.logic.samples.media.camera2.Camera2ListFragment"
        android:label="Selector">
        <!--action:声明的参数如下：-->
        <!--action:launchSingleTop：Fragment启动模式为栈顶复用-->
        <action
            android:id="@+id/action_camera_list_to_camera"
            app:destination="@id/camera_fragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.frewen.android.demo.adapter.Camera2Fragment"
        android:label="Camera">

        <argument
            android:name="camera_id"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="pixel_format"
            app:argType="integer"
            app:nullable="false" />

        <!--<action-->
        <!--    android:id="@+id/action_camera_to_permissions"-->
        <!--    app:destination="@id/permissions_fragment"-->
        <!--    app:popUpTo="@id/camera_fragment"-->
        <!--    app:popUpToInclusive="true" />-->

        <!--<action-->
        <!--    android:id="@+id/action_camera_to_jpeg_viewer"-->
        <!--    app:destination="@id/image_viewer_fragment"-->
        <!--    app:launchSingleTop="true" />-->
    </fragment>

</navigation>