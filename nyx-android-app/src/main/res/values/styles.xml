<resources>

    <!-- NyxAppTheme application theme. 当前应用的主题Style -->
    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <!--<item name="android:colorBackground">@color/gray_50</item>    -->
    <style name="NyxAppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/gray_50_a600</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/gray_50</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorSecondary">@color/yellow_500</item>
    </style>

    <!-- 定义全屏的AppTheme -->
    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--启动页面的布局Style。主要解决启动速度过慢的问题-->
    <style name="AppTheme.Splash" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@color/color_common_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--ToolbarStyle样式-->
    <style name="NyxAppTheme.ToolbarStyle" parent="@style/AppTheme.ToolBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <!-- AppBar的覆盖的Style文件   -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.Flower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.Sunflower.FAB" parent="ShapeAppearance.MaterialComponents.SmallComponent" />


    <style name="toolbarStyle" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="toolbarTheme" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="NyxAppTheme.MineTextView" parent="NyxAppTheme.SettingTextView">
        <item name="android:layout_height">25.5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="NyxAppTheme.SettingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="typeface">fzlLTypeface</item>
    </style>


    <style name="AppTheme.TabLayoutTextStyle">
        <item name="android:textSize">16dp</item>
    </style>


</resources>
